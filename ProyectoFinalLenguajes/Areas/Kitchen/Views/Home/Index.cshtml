@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex align-items-center justify-content-center min-vh-100 py-5" style="margin-top: -80px; margin-bottom: -120px;">
    <div class="text-center">
        <div class="card border-0 shadow-sm rounded-4 p-4" style="width: 100%; max-width: 400px;">
            <div class="card-body text-center">
                <form>
                    <div class="row justify-content-center">
                        <h1 class="mb-4 text-info">Welcome Back!</h1>
                        <p class="mb-4 text-secondary">Please Log In!</p>
                    </div>
                    <div class="row justify-content-center mb-2">
                        <div class="container">
                            <input placeholder="Your Email" type="email" class="form-control-sm " />
                        </div>
                    </div>
                    <div class="row justify-content-center mb-4">
                        <div class="container">
                            <input placeholder="Your Password" type="password" class="form-control-sm" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-center ">
                        <button asp-action="" class="btn btn-primary px-4">Log In</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>